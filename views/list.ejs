<!DOCTYPE html>
<html>
  <%- include("header"); -%>
  <body>
    <div class="box">
      <h1 id="heading"><%= listTitle %></h1>
    </div>
    <div class="box">
      <% newItemList.forEach(item => { %>
      <form action="/delete" method="post">
        <div class="item">
          <input
            type="checkbox"
            name="checkedItem"
            value="<%= item._id %>"
            onchange="this.form.submit()"
          />
          <p><%= item.taskName %></p>
        </div>
      </form>
      <% }) %>

      <form class="item" action="/" method="post" autocomplete="off">
        <input type="text" name="newItem" placeholder="New Item" required />
        <button type="submit" name="btn" value="<%= listTitle %>">+</button>
      </form>
    </div>
  </body>
  <%- include("footer"); -%>
</html>
