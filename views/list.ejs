<!DOCTYPE html>
<html>
  <%- include("header"); -%>
  <body>
    <div class="box">
      <h1 id="heading"><%= listName %></h1>
    </div>
    <div class="box">
      <% newItemList.forEach(item => { %>
      <div class="item">
        <input type="checkbox" />
        <p><%= item.taskName %></p>
      </div>
      <% }) %>

      <form class="item" action="/" method="post" autocomplete="off">
        <input type="text" name="newItem" placeholder="New Item" required />
        <button type="submit" name="btn" value="<%= listName %>">+</button>
      </form>
    </div>
  </body>
  <%- include("footer"); -%>
</html>
